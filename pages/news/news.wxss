/**index.wxss**/

.container {
  background: #f2f2f2;
}

.scroll-view {
  height: 1170rpx;
  background: white;
}

.new-cell {
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
}

.cell-l {
  flex: 0 0 55%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cell-title {
  font-weight: bold;
  font-size: 30rpx;
}

.cell-content {
  font-size: 22rpx;
}

.cell-time {
  font-size: 22rpx;
  color: #ccc;
}

.cell-r {
  margin-left: 3%;
  flex: 0 0 42%;
}

.cell-r>image {
  height: 220rpx;
  width: 100%;
}
