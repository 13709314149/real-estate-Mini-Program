/**index.wxss**/

.container {
  background: #fafafa;
  padding: 40rpx 30rpx;
}
.scroll-view{
  height: 1100rpx;
}

.reservation-cell {
  position: relative;
  background: white;
  margin-bottom: 30rpx;
  border: 1rpx solid #f2f2f2;
}

.house {
  padding: 40rpx 30rpx 20rpx 30rpx;
  display: flex;
}

.img-wrap {
  height: 155rpx;
  width: 180rpx;
  position: relative;
  margin-right: 20rpx;
  flex: 0 0 180rpx;
}

.img-wrap>image {
  height: 100%;
  width: 100%;
}

.house-info {
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
  width: 320rpx;
  height: 150rpx;
}

.house-info>text {
  flex: 1 1 100%;
  display: flex;
}

.house-info>text:nth-of-type(1) {
  font-size: 30rpx;
}

.house-info>text:nth-of-type(2) {
  font-size: 24rpx;
}

.house-info>text:nth-of-type(3) {
  font-size: 24rpx;
  color: #9a9a9a;
}

.statu {
  display: flex;
  width: 110rpx;
  color: #fdc07c;
  font-size: 22rpx;
  justify-content: center;
}

.color {
  color: #fdc07c;
}

.my {
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  height: 100rpx;
  padding: 0 30rpx;
  align-items: center;
  font-size: 24rpx;
}

.my-tab {
  margin-left: 25rpx;
  display: flex;
  align-items: center;
  font-family: 宋体;
}

.my-tab>image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.btn {
  display: flex;
  flex-wrap: wrap;
}

.btn>view {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1 1 50%;
  padding: 30rpx 0;
}

.btn>view:nth-of-type(1) {
  border-right: 1rpx solid #f2f2f2;
  box-sizing: border-box;
}
